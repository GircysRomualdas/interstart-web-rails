<div class="p-1 ps-3 me-4 border-start border-bottom border-3 rounded border-info-subtle mb-3 bg-body">
    <p> <%= reply.message %> </p>
    <div class="row">
        <div class="col text-end">
            <span> <%= reply.created_at.strftime("%Y-%m-%d %H:%M") %> </span>
        </div> 
    </div>

    <% if user_signed_in? %>
        <div class="row">
            <div class="col text-end">
                <%= button_to "delete", destroy_reply_path(reply.id), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
            </div> 
        </div>
    <% end %>
    
</div>